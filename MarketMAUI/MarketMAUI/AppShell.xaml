<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MarketMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MarketMAUI"
    xmlns:pages ="clr-namespace:MarketMAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="MarketMAUI">

    <FlyoutItem>
        <ShellContent
            Icon="home_icon.png"
    Title="Home"
    ContentTemplate="{DataTemplate pages:ProductsPage}"
     />
        <ShellContent
            Icon="camera_icon.png"
    Title="Camera"
    ContentTemplate="{DataTemplate pages:CameraPage}"
     />
        
    </FlyoutItem>
    

</Shell>
