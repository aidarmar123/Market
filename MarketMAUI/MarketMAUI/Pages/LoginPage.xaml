<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketMAUI.Pages.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout x:Name="Content"
                             Margin="30"
                             VerticalOptions="Center">
            <Label HorizontalOptions="Center"
                   FontSize="Header"
                   
                   Text="Sign in"/>
            <Label BackgroundColor="Pink"
                   HorizontalTextAlignment="Center"
                   Padding="3"
                   IsVisible="Collapse"
                   TextColor="Red"
                   x:Name="LError"/>
            <Label Text="Login"/>
            <Entry Text="{Binding Login}"
                   MaxLength="50"/>

            <Label Text="Password"/>
            <Entry IsPassword="True"
                   MaxLength="50"
                   Text="{Binding Password}"/>
            <Button Text="Sign in"
                    x:Name="BLogin"
                    Clicked="BLogin_Clicked"
                    Margin="0, 10"/>
            <Button x:Name="BSignUp"
                    Text="Sign Up"
                    Clicked="BSignUp_Clicked"
                    Background="Gray"/>
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>