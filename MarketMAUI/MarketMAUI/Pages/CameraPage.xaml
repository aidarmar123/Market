<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketMAUI.Pages.CameraPage"
             xmlns:cm ="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             Title="CameraPage">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        VerticalOptions="Fill"
        HorizontalOptions="Fill"
        Spacing="25">
            
            <cm:CameraView x:Name="cameraView" 
                           WidthRequest="350" 
                           HeightRequest="250"/>
            <Button x:Name="BStartCamera"
        Clicked="BStartCamera_Clicked"
        Text="Skan BarCode"/>
            <Button x:Name="BFindProduct"
                    
        Clicked="BFindProduct_Clicked"
        Text="Find Product"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>