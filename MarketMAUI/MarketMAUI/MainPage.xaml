<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <CarouselView x:Name="CV"
                HeightRequest="500"
                HorizontalOptions="Center">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                     >
                            <VerticalStackLayout>
                                <Image Source="{Binding image}"
                             WidthRequest="200"
                             HeightRequest="150"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CarouselView.ItemTemplate>

            </CarouselView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
