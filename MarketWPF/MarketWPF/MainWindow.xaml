<Window x:Class="MarketWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWPF"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800">
    <Window.Resources>
        <Style TargetType="Frame">
            <Setter Property="NavigationUIVisibility"
                    Value="Hidden"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Products">
                <Frame x:Name="ProductFrame"/>
            </TabItem>
            <TabItem Header="History Scan">
                <Frame x:Name="HistoryFrame"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
